{
  "id": "name.klep.transitions",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Transitions"
  },
  "description": {
    "en": "Flexible time transitions"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Robert Klep",
    "email": "robert@klep.name"
  },
  "flow" : {
    "triggers" : [
      {
        "id" : "transition_started",
        "title" : {
          "en": "Transition started",
          "nl": "Transitie gestart"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Name",
              "nl": "Naam"
            }
          }
        ],
        "tokens" : [
          {
            "name" : "name",
            "type" : "string",
            "title" : {
              "en" : "Name",
              "nl" : "Naam"
            },
            "example" : "lamp-brightness"
          },
          {
            "name" : "value",
            "type" : "number",
            "title" : {
              "en" : "Value",
              "nl" : "Waarde"
            },
            "example" : 0
          }
        ]
      },
      {
        "id" : "transition_changed",
        "title" : {
          "en": "Transition changed",
          "nl": "Transitie veranderd"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Name",
              "nl": "Naam"
            }
          }
        ],
        "tokens" : [
          {
            "name" : "name",
            "type" : "string",
            "title" : {
              "en" : "Name",
              "nl" : "Naam"
            },
            "example" : "lamp-brightness"
          },
          {
            "name" : "value",
            "type" : "number",
            "title" : {
              "en" : "Value",
              "nl" : "Waarde"
            },
            "example" : 42
          }
        ]
      },
      {
        "id" : "transition_ended",
        "title" : {
          "en": "Transition ended",
          "nl": "Transitie klaar"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Name",
              "nl": "Naam"
            }
          }
        ],
        "tokens" : [
          {
            "name" : "name",
            "type" : "string",
            "title" : {
              "en" : "name",
              "nl" : "naam"
            },
            "example" : "lamp-brightness"
          },
          {
            "name" : "value",
            "type" : "number",
            "title" : {
              "en" : "value",
              "nl" : "waarde"
            },
            "example" : 100
          }
        ]
      },
      {
        "id" : "transition_stopped",
        "title" : {
          "en": "Transition stopped",
          "nl": "Transitie gestopt"
        },
        "args": [
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Name",
              "nl": "Naam"
            }
          }
        ],
        "tokens" : [
          {
            "name" : "name",
            "type" : "string",
            "title" : {
              "en" : "name",
              "nl" : "naam"
            },
            "example" : "lamp-brightness"
          },
          {
            "name" : "value",
            "type" : "number",
            "title" : {
              "en" : "value",
              "nl" : "waarde"
            },
            "example" : 100
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "start_transition_text",
        "title": {
          "en": "Start a transition",
          "nl": "Start een transitie"
        },
        "hint" : {
          "en" : "Start a transition. Provide start and end values, the total duration for the transition, and the step size (number of seconds between updates), as a string.",
          "nl" : "Start een transitie. Geef de start- en eindwaarden, de totale duur voor de transitie, en de stapwaarde (aantal seconden tussen updates), als tekst."
        },
        "args": [
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "0-100, 30s, 1s",
              "nl": "0-100, 30s, 1s"
            }
          },
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Transition name",
              "nl": "Transitienaam"
            }
          }
        ]
      },
      {
        "id": "start_transition",
        "title": {
          "en": "Start a transition",
          "nl": "Start een transitie"
        },
        "hint" : {
          "en" : "Start a transition. Provide start and end values, the total duration for the transition, and the step size (number of seconds between updates).",
          "nl" : "Start een transitie. Geef de start- en eindwaarden, de totale duur voor de transitie, en de stapwaarde (aantal seconden tussen updates)."
        },
        "args": [
          {
            "name": "startValue",
            "type": "number",
            "placeholder": {
              "en": "Start value",
              "nl": "Startwaarde"
            }
          },
          {
            "name": "endValue",
            "type": "number",
            "placeholder": {
              "en": "End value",
              "nl": "Eindwaarde"
            }
          },
          {
            "name": "duration",
            "type": "number",
            "placeholder": {
              "en": "Duration (s)",
              "nl": "Duur (s)"
            },
            "min" : 1
          },
          {
            "name": "step",
            "type": "number",
            "placeholder": {
              "en": "Step value (s)",
              "nl": "Stapwaarde (s)"
            },
            "min" : 1
          },
          {
            "name": "name",
            "type": "text",
            "placeholder": {
              "en": "Transition name",
              "nl": "Transitienaam"
            }
          }
        ]
      }
    ]
  }
}
